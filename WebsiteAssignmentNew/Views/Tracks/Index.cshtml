@model IEnumerable<WebsiteAssignmentNew.Models.Track>

    @{
        ViewBag.Title = "Index";
    }

    <h2 id="pageTitle">Tracks</h2>

    <div id="forloop">
        @foreach (var Track in Model)
        {
            using (Html.BeginForm("AddTrack", "Cart", FormMethod.Post))
            {

            <div class="fade">
            <div id="cardDeck" class="card-deck">
                <div class="col-md-4">
                    <div class="card">
                        <img id="img" class="card-img-top" src="~/Content/TrackImages/@Track.Artwork" alt="Track Image">
                        <div class="card-block">
                            <h4 class="card-title">@Track.Artist - @Track.Title</h4>
                        </div>
                        <div class="card-footer">
                             <input type="text" name="TrackCode" value=@Track.TrackCode hidden />
                       
                            <h4 id="selectQuantity">Select Quantity: @Html.DropDownList("quantity", new SelectList((List<int>)ViewBag.Quantity))</h4>
                            

                            <input type="submit" class="btn btn-block" data-toggle="tooltip" data-placement="top" value="Add to cart €10" />
                           
    </div>
                    </div>


                    <div>
                        <audio id="player" class="full" controls="controls" runat=server src="~/Content/Audio/@Track.TrackAudio" type="audio/mp3">
                            Your browser does not support the audio element.
                        </audio>


                    </div>
                </div>
                </div>
            </div>

            }
        }
    </div>



   
